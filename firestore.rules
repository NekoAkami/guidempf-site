rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== Fonctions helper =====
    function isAuthenticated() {
      return request.auth != null;
    }

    function isApproved() {
      return isAuthenticated()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.approved == true;
    }

    function isAdmin() {
      return isApproved()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_admin == true;
    }

    function isHautGrade() {
      return isApproved()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_hg == true;
    }

    function isAdminOrHG() {
      return isAdmin() || isHautGrade();
    }

    // ===== USERS =====
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isAdminOrHG();
      allow create: if isAuthenticated()
        && request.auth.uid == userId
        && request.resource.data.is_admin == false
        && request.resource.data.approved == false;
      allow update: if isAuthenticated()
        && request.auth.uid == userId
        && request.resource.data.is_admin == resource.data.is_admin
        && request.resource.data.approved == resource.data.approved
        && request.resource.data.is_hg == resource.data.is_hg;
      allow update: if isAdminOrHG();
      allow delete: if isAdmin();
    }

    // ===== MPF_DATA =====
    match /mpf_data/{docId} {
      allow read: if isApproved();

      // Admin ou HG : document-level writes (units, playtime, blame_config)
      allow write: if isAdminOrHG()
        && docId in ['units', 'playtime', 'playtime_history', 'blame_config'];

      // Approved : document-level writes (compat + competences)
      allow write: if isApproved()
        && docId in ['reports', 'absences', 'deposits', 'competences'];

      // Blâmes : admin ou HG uniquement
      allow write: if isAdminOrHG()
        && docId == 'blames';

      // Payroll config : admin ou HG
      allow write: if isAdminOrHG()
        && docId == 'payroll_config';

      // Sous-collections (rapports, plaintes, planning, payes, etc.)
      match /items/{itemId} {
        allow read: if isApproved();
        allow create: if isApproved();
        allow update: if isApproved();
        allow delete: if isApproved();
      }
    }

    // ===== CONFIG (navigation, maintenance) =====
    match /config/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdminOrHG();

      // Sous-collection logs maintenance
      match /logs/{logId} {
        allow read: if isAuthenticated();
        allow create: if isAdminOrHG();
        allow delete: if isAdminOrHG();
      }
    }

    // ===== SETTINGS (radio, cwu) =====
    match /settings/{settingId} {
      allow read: if isApproved();
      allow write: if isAdminOrHG();
    }

    // ===== PRÉSENCE EN LIGNE =====
    match /presence/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
        && request.auth.uid == userId;
    }

    // ===== BLOQUER TOUT LE RESTE =====
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
