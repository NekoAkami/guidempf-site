  <script>
    // Mise √† jour de l'heure
    function updateTime() {
      const now = new Date();
      const timeString = now.toLocaleTimeString('fr-FR', { 
        hour12: false,
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit'
      });
      document.getElementById('current-time').textContent = timeString;
    }
    
    setInterval(updateTime, 1000);
    updateTime();
    
    // Simulation de transmissions al√©atoires
    function simulateTransmission() {
      const indicator = document.getElementById('transmission-indicator');
      indicator.style.display = 'flex';
      
      setTimeout(() => {
        indicator.style.display = 'none';
      }, 3000);
      
      // Prochaine transmission dans 10-30 secondes
      setTimeout(simulateTransmission, Math.random() * 20000 + 10000);
    }
    
    // D√©marrer la simulation apr√®s un d√©lai initial
    setTimeout(simulateTransmission, 5000);
    
    // Effets interactifs sur les commandes
    document.querySelectorAll('.command-item').forEach(item => {
      item.addEventListener('click', function() {
        const trigger = this.querySelector('.command-trigger').textContent;
        const response = this.querySelector('.command-response').textContent;
        
        // Animation de s√©lection
        this.style.transform = 'scale(0.98)';
        setTimeout(() => {
          this.style.transform = 'scale(1)';
        }, 150);
        
        // Log dans la console (pour le style)
        console.log(`%c${trigger}`, 'color: #20a040; font-weight: bold;');
        console.log(`%c${response}`, 'color: #80d090; font-style: italic;');
      });
    });
  </script>
</div>

