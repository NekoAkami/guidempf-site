  <style>
    @import url('https://fonts.googleapis.com/css2?family=Share+Tech+Mono&family=Roboto+Condensed:wght@400;700&display=swap');
    
    /* --- CONFIGURATION GLOBALE --- */
    .combine-terminal-wrapper {
      max-width: 1200px;
      margin: 20px auto;
      background: #0a0a0f;
      border: 1px solid #2a4a6a;
      box-shadow: 0 0 20px rgba(66, 135, 245, 0.08);
      font-family: 'Share Tech Mono', monospace;
      color: #b0c4de;
      overflow: hidden;
      position: relative;
    }

    /* Scanlines effect */
    .combine-terminal-wrapper::after {
      content: " ";
      display: block;
