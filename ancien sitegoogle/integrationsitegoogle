  <div class="form-footer">
    CALCULATEUR DE LOYAUT√â DE L'UNION // SESSION TERMINEE
  </div>

  <script>
    (function() {
      // 1. GESTION DU CALCUL
      const options = document.querySelectorAll('.option-item');
      
      options.forEach(opt => {
        opt.addEventListener('click', function() {
          // Gestion de la s√©lection visuelle
          const parent = this.closest('.options-list');
          parent.querySelectorAll('.option-item').forEach(s => s.classList.remove('selected'));
          this.classList.add('selected');
          
          calculateHelixScores();
        });
      });

      function calculateHelixScores() {
        let ideoScore = 0;
        let reflexScore = 0;

        const selectedOptions = document.querySelectorAll('.option-item.selected');

        selectedOptions.forEach(opt => {
          const questionBlock = opt.closest('.question-block');
          if(!questionBlock) return;

          const group = questionBlock.getAttribute('data-group');
          const val = parseInt(opt.getAttribute('data-val') || 0);

          if (group === 'compliance' || group === 'semantic') {
             ideoScore += val;
          } else if (group === 'stress') {
             reflexScore += val;
          }
        });

        updateDisplay('result-ideo', ideoScore, 14, 29, false); 
        updateDisplay('result-reflex', reflexScore, 4, 8, false); 
      }

      function updateDisplay(elementId, score, limitRed, limitYellow, lowerIsBetter) {
        const display = document.getElementById(elementId);
        const formattedScore = score < 10 ? '0' + score : score;
        display.textContent = formattedScore;

        let color = '#38bdf8'; // Cyan par d√©faut
        
        if (lowerIsBetter) {
            if (score > limitYellow) color = '#ef4444'; 
            else if (score > limitRed) color = '#fbbf24'; 
        } else {
            if (score <= limitRed) color = '#ef4444'; // Rouge
            else if (score <= limitYellow) color = '#fbbf24'; // Jaune
        }

        display.style.color = color;
        display.style.borderColor = color;
      }

      // 2. GESTION DE LA COPIE
      document.getElementById('btn-copy-clipboard').addEventListener('click', function() {
        const unitRef = document.getElementById('unit-ref').value || "NON SP√âCIFI√â";
        const unitStatus = document.getElementById('unit-status').value || "INCONNU";
        const unitTested = document.getElementById('unit-tested').value || "NON SP√âCIFI√â";
        const ideoScore = document.getElementById('result-ideo').textContent;
        const reflexScore = document.getElementById('result-reflex').textContent;
        const dateNow = new Date().toLocaleString();
        
        let content = "/// RAPPORT DE LOYAUT√â - CIT√â 17 ///\n";
        content += "REF: LOY-CHK-C17\n";
        content += "DATE: " + dateNow + "\n";
        content += "INSPECTEUR : " + unitRef + "\n";
        content += "SUJET TEST√â: " + unitTested + "\n";
        content += "STATUT     : " + unitStatus + "\n";
        content += "----------------------------------------\n\n";

        const allBlocks = document.querySelectorAll('.question-block');
        
        allBlocks.forEach((block) => {
            const questionText = block.querySelector('.question-text').innerText;
            const selectedOpt = block.querySelector('.option-item.selected');
            const textArea = block.querySelector('textarea');
            
            content += "[Q] " + questionText + "\n";
            
            // --- LOGIQUE DE R√âCUP√âRATION DU TEXTE DES BULLES ---
            if (textArea && textArea.value.trim() !== "") {
                // On nettoie et on formate proprement pour le rapport
                const cleanText = textArea.value.trim().replace(/\n/g, "\n > "); 
                content += " > NOTE / R√âPONSE : \"" + cleanText + "\"\n";
            }
            
            if (selectedOpt) {
                let scoreText = selectedOpt.innerText;
                content += " > √âVALUATION : " + scoreText + "\n";
            } else {
                content += " > √âVALUATION : NON NOT√â\n";
            }
            content += "\n";
        });

        content += "----------------------------------------\n";
        content += "/// R√âSULTATS FINAUX ///\n";
        content += "CONFORMIT√â ID√âOLOGIQUE : " + ideoScore + " / 36\n";
        content += "R√âFLEXES & STRESS      : " + reflexScore + " / 12\n\n";
        content += "GLOIRE A L'UNION UNIVERSELLE.";

        if (navigator.clipboard && window.isSecureContext) {
            navigator.clipboard.writeText(content).then(showSuccessFeedback).catch(err => fallbackCopy(content));
        } else {
            fallbackCopy(content);
        }
      });

      function fallbackCopy(text) {
        const textArea = document.createElement("textarea");
        textArea.value = text;
        textArea.style.position = "fixed";
        textArea.style.left = "-9999px";
        document.body.appendChild(textArea);
        textArea.focus();
        textArea.select();
        try {
            document.execCommand('copy');
            showSuccessFeedback();
        } catch (err) {
            alert("Erreur de copie manuelle.");
        }
        document.body.removeChild(textArea);
      }

      function showSuccessFeedback() {
        const btn = document.getElementById('btn-copy-clipboard');
        const originalText = btn.innerHTML;
        btn.innerHTML = "‚úÖ COPI√â !";
        btn.style.background = "#38bdf8";
        btn.style.color = "#000";
        setTimeout(() => {
            btn.innerHTML = originalText;
            btn.style.background = "rgba(12, 74, 110, 0.4)";
            btn.style.color = "#e0f2fe";
        }, 2000);
      }

    })();
  </script>
</div>

  Scanner  Proc√©dure de D√©tention  <div class="combine-terminal-wrapper">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Share+Tech+Mono&family=Roboto+Condensed:wght@400;700&display=swap');
    
    /* --- CONFIGURATION GLOBALE --- */
    .combine-terminal-wrapper {
      max-width: 800px;
      margin: 20px auto;
      background: #0a0a0f;
      border: 1px solid #2a4a6a;
      box-shadow: 0 0 20px rgba(66, 135, 245, 0.08);
      font-family: 'Share Tech Mono', monospace;
      color: #b0c4de;
      overflow: hidden;
      position: relative;
    }

    /* Scanlines effect */
